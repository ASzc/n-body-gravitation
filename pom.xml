<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ca.szc.physics</groupId>
  <artifactId>n-body-gravitation</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>N-Body Sim</name>
  <description>N-Body Gravitational Simulation</description>
  <url>https://github.com/ASzc/n-body-gravitation</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>

  <licenses>
    <license>
      <name>GPLv3</name>
      <url>https://gnu.org/licenses/gpl.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>ASzc</id>
      <name>Alex Szczuczko</name>
      <email>alex@szc.ca</email>
      <url>http://szc.ca</url>
      <roles>
        <role>developer</role>
      </roles>
      <timezone>-5</timezone>
    </developer>
  </developers>

  <scm>
    <connection>scm:git:https://github.com/ASzc/n-body-gravitation.git</connection>
    <developerConnection>scm:git:ssh://git@github.com:ASzc/n-body-gravitation.git</developerConnection>
    <url>https://github.com/ASzc/n-body-gravitation</url>
  </scm>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/ASzc/n-body-gravitation/issues</url>
  </issueManagement>

  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.mycila.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
        <version>1.9.0</version>
        <configuration>
          <header>license-header.txt</header>
          <strictCheck>true</strictCheck>
          <includes>
            <include>src/**</include>
          </includes>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.tinylog</groupId>
      <artifactId>tinylog</artifactId>
      <version>0.8.1</version>
    </dependency>
  </dependencies>
</project>
